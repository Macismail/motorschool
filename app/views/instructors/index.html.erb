<div class="container">
      <p id="notice"><%= notice %></p>

  <h1 class="text-center">Instructors</h1><br>
  <div class="row">
    <div class="col-7">
      <%= link_to 'New Instructor', new_instructor_path, class:'btn btn-outline-primary btn-sm' %>
    </div>
    <div class="col-5">
      <%= form_tag instructors_path, method: :get do %>
        <%= text_field_tag :search, params[:search], placeholder: "Search..." %>
        <%= submit_tag "Search", class:'btn btn-outline-primary btn-sm' %>
      <% end %>
    </div>
  </div><br><br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Full name</th>
        <th>Phone number</th>
        <th>Email</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @instructors.each do |instructor| %>
        <tr>
          <td><%= instructor.full_name %></td>
          <td><%= instructor.phone_n %></td>
          <td><%= instructor.email %></td>
          <td><%= instructor.category %></td>
          <div class="btn-group">
            <td><%= link_to 'Show', instructor, class:'btn btn-outline-primary btn-sm' %></td>
            <% if user_signed_in? && current_user.email == instructor.email %>
            <td><%= link_to 'Edit', edit_instructor_path(instructor), class:'btn btn-outline-primary btn-sm' %></td>
            <td><%= link_to 'Destroy', instructor, class:'btn btn-outline-primary btn-sm', method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </div>

        </tr>
      <% end %>
    </tbody>
  </table>

</div>

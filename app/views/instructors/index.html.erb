<div class="container">
      <p id="notice"><%= notice %></p>

  <h1 class="text-center">Instructors</h1>
  <div class="">
    <%= link_to 'New Instructor', new_instructor_path, class:'btn btn-outline-primary btn-sm' %>
  </div><br><br>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Full name</th>
        <th>Phone n</th>
        <th>Email</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @instructors.each do |instructor| %>
        <tr>
          <td><%= instructor.full_name %></td>
          <td><%= instructor.phone_n %></td>
          <td><%= instructor.email %></td>
          <td><%= instructor.category %></td>
          <td><%= link_to 'Show', instructor %></td>
          <td><%= link_to 'Edit', edit_instructor_path(instructor) %></td>
          <td><%= link_to 'Destroy', instructor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>

<%= form_with(model: [current_user, lesson], local: true) do |form| %>
<% if lesson.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(lesson.errors.count, "error") %>
      prohibited this lesson from being saved:</h2>

    <ul>
      <% lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-group">
  <%= form.label :lesson_date %><br>
  <%= form.text_field :l_date, autofocus:true, class:'form-control datepicker' %>
</div>

<div class="form-group">
  <%= form.label :lesson_time %><br>
  <%= form.time_select :l_time, class:'form-control' %>
</div>

<div class="form-group">
  <%= form.label :remaining_hours %>
  <%= form.text_field :n_lesson, class:'form-control' %>
</div>

<div class="form-group">
  <%= form.label :duration %><br>
  <%= form.text_field :duration, class:'form-control' %>
</div>

<div class="control-group">
  <%= form.label :instructor %><br>
  <%= form.collection_select :instructor, Instructor.order(:full_name), :full_name, :full_name %>
</div>

<div class="form-group">
  <% form.label :user_id %>
  <% form.text_field :user_id %>
</div>

<div class="form-group text-center">
  <%= form.submit "Submit", class:'btn btn-outline-primary btn-sm' %>
</div>
<% end %>

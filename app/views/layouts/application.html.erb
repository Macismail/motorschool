<!DOCTYPE html>
<html>
  <head>
    <title>Motorschool</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render partial: 'partials/navbar'%>
    <div class="container">
      <div class="row">
        <div class="col-2"></div>
        <div class="col-8">
          <p class="notice alert-success text-center"><%= notice %></p>
          <p><%= alert %></p>
        </div>
        <div class="col-2">
          <% if user_signed_in? %>
          <div class="text-center">
            <i><%= link_to @userDetail, edit_user_registration_path %></i>
          </div>
          <% end %>
        </div>
      </div>
      <%= yield %>
    </div>
    <%= render partial: "partials/datepicker" %>
  </body>
</html>
